<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/fondo"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imagen"
        android:layout_width="200dp"
        android:layout_height="76dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:src="@mipmap/logo" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/fondo">

        <Button
            android:id="@+id/boton_maps"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="MAPS"
            android:backgroundTint="@color/black"
            android:src="@color/black" />
        <Button
            android:id="@+id/boton_llamar"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="LLAMAR"
            android:backgroundTint="@color/black"
            android:src="@color/black" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearbusqueda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/fondo">
    <TextView
        android:id="@+id/tv_presentacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Resultado de busqueda:"
        android:textSize="20dp"
        android:textAlignment="center"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Ciudad:"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:layout_weight="5"
           />
        <TextView
            android:id="@+id/tv_Ciudad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:paddingLeft="20dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="A o C:"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:layout_weight="5"
            />
        <TextView
            android:id="@+id/tv_AoC"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:paddingLeft="20dp"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Tipo:"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:layout_weight="5"
            />
        <TextView
            android:id="@+id/tv_tipo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:paddingLeft="20dp"
            android:layout_weight="1"/>
    </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="451dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/fondo"
            android:visibility="gone"

            android:id="@+id/mostrardatos"
            >
            <TextView
                android:id="@+id/tv_localizacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:hint="Dirección"
                android:text="" />
            <ImageView
                android:id="@+id/foto"
                android:paddingTop="20dp"
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/logo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dirección:"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:gravity=""
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_direccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Dirección"
                android:text="" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Datos del anfitrión:"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:gravity=""
                android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagen_nombre"
                android:layout_width="50dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@mipmap/usuario" />
            <TextView
                android:id="@+id/tv_nombre_anfitrion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Nombre"
                android:text="" />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagen_telf"
                android:layout_width="50dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@mipmap/llamada" />
            <TextView
                android:id="@+id/tv_telf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="telefono"
                android:text="" />
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imagen_email"
                    android:layout_width="50dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/correoelectronico" />
                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:hint="email"
                    android:text="" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción:"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:gravity=""
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Descripción"
                android:gravity="center"

                android:text="" />






        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/fondo">
        <Button
            android:id="@+id/boton_buscar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:text="CARGAR "
            android:backgroundTint="@color/black"
            android:src="@color/black"
            android:layout_gravity="center"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/fondo">


            <Button
                android:id="@+id/boton_Volver"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:text="VOLVER AL BUSCADOR"
                android:visibility="gone"
                android:backgroundTint="@color/black"
                android:src="@color/black" />
        </LinearLayout>
</LinearLayout>